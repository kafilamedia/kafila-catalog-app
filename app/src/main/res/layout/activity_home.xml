<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/kiis_ceremony" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/home_bg"
            android:orientation="vertical"
            tools:context="id.sch.kafila.catalog.activities.HomeActivity">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/kiis_stroke" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_fasilitas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:buttonLabel="Fasilitas"
                            app:drawableId="@drawable/resources" />

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_program_pengembangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:buttonLabel="Program Pengembangan"
                            app:drawableId="@drawable/dev" />

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_biaya_pendidikan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:buttonLabel="Biaya Pendidikan"
                            app:drawableId="@drawable/env" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_visi_misi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="clip_horizontal"
                            app:buttonLabel="Visi Misi"
                            app:drawableId="@drawable/v1211" />

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_nilai_unggul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="clip_horizontal"
                            app:buttonLabel="Nilai Unggul"
                            app:drawableId="@drawable/nilai" />

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_program_pendidikan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="clip_horizontal"
                            app:buttonLabel="Program Pendidikan"
                            app:drawableId="@drawable/edu" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="horizontal">

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_sebaran_alumni"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:buttonLabel="Sebaran Alumni"
                            app:drawableId="@drawable/alum" />


                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/home_btn_syarat_pendaftaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:buttonLabel="Syarat Pendaftaran"
                            app:drawableId="@drawable/s1270" />

                        <id.sch.kafila.catalog.components.MenuButton
                            android:id="@+id/btn_home_exit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:buttonLabel="Exit"
                            app:drawableId="@drawable/exit" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preface_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/preface3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/home_preface3"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/preface2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="@string/home_preface2"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/preface"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/home_preface1"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                    <id.sch.kafila.catalog.components.KafilaFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation" />
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kiis_ceremony" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:orientation="vertical"
        tools:context="id.sch.kafila.catalog.activities.HomeActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/kiis_stroke" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_fasilitas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:buttonLabel="Fasilitas"
                        app:drawableId="@drawable/home" />

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_program_pengembangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Program Pengembangan"
                        app:drawableId="@drawable/dev" />

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_biaya_pendidikan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Biaya Pendidikan"
                        app:drawableId="@drawable/env" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_visi_misi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_horizontal"
                        app:buttonLabel="Visi Misi"
                        app:drawableId="@drawable/v1211" />

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_nilai_unggul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="clip_horizontal"
                        app:buttonLabel="Nilai Unggul"
                        app:drawableId="@drawable/nilai" />

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_program_pendidikan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="clip_horizontal"
                        app:buttonLabel="Program Pendidikan"
                        app:drawableId="@drawable/edu" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/home_btn_sebaran_alumni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Sebaran Alumni"
                        app:drawableId="@android:drawable/ic_menu_mapmode" />


                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Syarat Pendaftaran"
                        app:drawableId="@drawable/s1270" />

                    <id.sch.kafila.catalog.components.MenuButton
                        android:id="@+id/btn_home_exit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Exit"
                        app:drawableId="@drawable/exit" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/preface_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/preface3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/home_preface3"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/preface2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/home_preface2"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/preface"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:text="@string/home_preface1"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="7"
                            app:srcCompat="@android:drawable/ic_dialog_email" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="124dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="info@kafila.sch.id"
                            android:textColor="#ffffff" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_weight="7"
                            app:srcCompat="@drawable/web" />

                        <TextView
                            android:id="@+id/txtLink"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:autoLink="all"
                            android:text="https://kafila.sch.id"
                            android:textColorLink="@android:color/background_light" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="55dp"
                            android:layout_height="20dp"
                            android:layout_margin="10dp"
                            android:layout_weight="9"
                            app:srcCompat="@android:drawable/stat_sys_phone_call" />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:text="021 8400762"
                            android:textColor="#ffffff" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>


        </ScrollView>

    </LinearLayout></FrameLayout>
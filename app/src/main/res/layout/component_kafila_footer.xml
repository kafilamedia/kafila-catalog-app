<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    android:padding="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_email_icon"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:src="@android:drawable/ic_dialog_email" />

        <TextView
            android:id="@+id/footer_email_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="info@kafila.sch.id"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_web_icon"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@drawable/web" />

        <TextView
            android:id="@+id/footer_web_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:autoLink="all"
            android:text="https://kafila.sch.id"
            android:textColorLink="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_phone_icon"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:src="@android:drawable/stat_sys_phone_call" />

        <TextView
            android:id="@+id/footer_phone_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="021 8400762"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footer_address_icon"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_weight="1"

            android:src="@drawable/loc" />

        <TextView
            android:id="@+id/footer_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Jl. Raya Bogor Km.22 No.22 Rambutan Ciracas Jakarta Timur 13830"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>